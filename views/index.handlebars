
    <div class="row" id="order-div">
        <div class="col">
                            
            <div class="row order-row"></div>
                <h2>Place an order:</h2>
            </div>
            <div class="row order-row">
                <form id="addburger" class="create-form">

                <div class="form-group">
                    <label for="bgr"></label>
                    <input type="text" class="form-control" id="burger-name" name="name" placeholder="Burger Name">
                </div>
                <button type="submit" class="btn btn-success">Submit Order</button>
                </form>
            </div>
        </div>
    </div>
    <br>
    <div class="row" id="devoured-burgers">

        <div class="col">
            <div class="row heading">
                <h2>Ready to Eat!</h2>
            </div>
            
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <div class="card">
                            <p id="new-burger">{{id}}. {{burger_name}}
                            <button type="button" class="btn btn-success devour-status" data-id="{{id}}" data-newDevour="true">Devour it!</button>
                            </p>
                        </div> 
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col">
            <div class="row heading">
                <h2>Burgers Eaten!</h2>
            </div>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <div class="card">
                            <p id="eaten">{{id}}. {{burger_name}}</p>
                        </div> 
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
<script>

    $("#addburger").on("submit", function(event) {
        console.log("Order submitted")
        event.preventDefault();
        
        const burger_name = $("#burger-name").val().trim();

        if (burger_name === "") {
            alert("Please enter a burger name!")
        } else {
            const newBurger = {
                burger_name: $("#burger-name").val().trim(),
            }

            $.ajax("/api/burgers", {
                type: "POST",
                data: newBurger
            }).then(
                function() {
                    console.log("Added a new burger");
                    debugger;
                    location.reload();
                }
            );
        }
    });

    $(".devour-status").on("click", function(event) {
        const id = $(this).data("id");
        const newDevour = $(this).attr("data-newDevour");

        const newDevourStatus = {
            devoured: newDevour
        };

        $.ajax("/api/burgers/" + id, {
            type: "PUT",
            data: newDevourStatus
        }).then(
            function() {
                console.log("Burger devoured!");
                location.reload();
            }
        );
    });

</script>